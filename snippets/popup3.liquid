{%- comment -%} popup3.liquid {%- endcomment -%}
<div class="popup-card">
  <div class="popup-card__media">
    <img src="{{ 'look3.png' | asset_url }}" alt="Look 3">
  </div>
  <div class="popup-card__body">
    <h3 class="popup-card__title">Accordion Pleated Dress</h3>
    <div class="popup-card__price">980,00€</div>
    <p class="popup-card__text">
      This one‑piece swimsuit is crafted from jersey featuring an allover micro Monogram motif in relief.
    </p>
    <br>
    <div class="popup-card__row1">
      <label>Color</label>
      <div class="popup-card__choices">
        <button class="popup-chip" type="button">Red</button>
        <button class="popup-chip" type="button">Grey</button>
      </div>
    </div>
    <div class="popup-card__row">
      <label>Size</label>
      <select class="popup-select">
        <option>Choose your size</option>
        <option>XS</option><option>S</option><option>M</option><option>L</option><option>XL</option>
      </select>
    </div>
    <button class="popup-cta" type="button">ADD TO CART →</button>
  </div>
</div>
